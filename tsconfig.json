{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": "src**",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "allowJs": true
  }
}
